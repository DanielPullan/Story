{% include 'header.html' %}


<div class="articleGrid">
    <div class="row">
        {% for page in pages|sort_by("time")|reverse %}
        {% if page.meta.template == "singleBlog" %}
            <article class="col-4">
            <figure>
                <a href="{{ page.url }}"><img src="{{ page.meta.thumbnail }}" alt="{{ page.title }}" class="img-responsive"></a>
            </figure>
                <h2><a href="{{ page.url }}">{{ page.title }}</a></h2>
                <span>{{ page.date }}</span>
            </article>
        {% endif %}
        {% endfor %}
    </div>
</div>

{% include 'footer.html' %}
